// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categorias {
  id     Int    @id @default(autoincrement())
  nombre String
}

model Usuarios {
  id       Int    @id @default(autoincrement())
  nombre   String
  email    String @unique
  password String
}

model Qr {
  id          Int       @id @default(autoincrement())
  codigo      String
  status      Estatus
  producto    Productos @relation(fields: [productosId], references: [id], onDelete: Cascade)
  productosId Int       @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Estatus {
  ACTIVO
  USADO
  DESTRUIDO
}

model Productos {
  id          Int          @id @default(autoincrement())
  nombre      String
  descripcion String
  tipo        TipoProducto
  cepa        String
  thc         Float
  cbd         Float
  aroma       String
  efecto      String
  qr          Qr?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TipoProducto {
  FLOR
  GOTEO
  UNGUENTO
  EDIBLES
  CARTUCHO
  ACEITE
}
